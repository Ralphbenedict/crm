<%- include('../partials/header') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Orders</h1>
            <a href="/orders/create" class="btn btn-primary">Create New Order</a>
        </div>

        <!-- Search Form -->
        <div class="card mb-4">
            <div class="card-body">
                <form id="searchForm" class="row g-3">
                    <div class="col-md-5">
                        <div class="input-group">
                            <input type="text" class="form-control" id="searchInput"
                                placeholder="Search by customer name or SI number...">
                            <select class="form-select" id="searchType" style="max-width: 150px;">
                                <option value="customer">Customer Name</option>
                                <option value="si">SI Number</option>
                            </select>
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <% if (orders && orders.length> 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>SI Number</th>
                            <th>Order Date</th>
                            <th>Customer</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="ordersTableBody">
                        <% orders.forEach(order=> { %>
                            <tr>
                                <td>
                                    <%= order.siNumber %>
                                </td>
                                <td>
                                    <%= new Date(order.orderDate).toLocaleDateString() %>
                                </td>
                                <td>
                                    <%= order.customerName %>
                                </td>
                                <td>₱<%= order.totalAmount.toLocaleString() %>
                                </td>
                                <td>
                                    <span class="badge bg-<%= getStatusColor(order.status.name) %>">
                                        <%= order.status.name %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/orders/<%= order.id %>" class="btn btn-sm btn-info">View</a>
                                        <a href="/orders/<%= order.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                                        <form action="/orders/<%= order.id %>/delete" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this order?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info">
                    No orders found. <a href="/orders/create">Create your first order</a>.
                </div>
                <% } %>
    </div>

    <%- include('../partials/footer') %>

        <!-- Add jQuery UI for autocomplete -->
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

        <script>
            function getStatusColor(status) {
                const statusColors = {
                    'Fully Paid': 'success',
                    'Paid': 'primary',
                    'BIR 2307': 'info',
                    'Unpaid': 'warning',
                    'Cancelled': 'danger',
                    'Month': 'secondary',
                    'Bad Debts': 'dark'
                };
                return statusColors[status] || 'secondary';
            }

            $(document).ready(function () {
                let searchTimeout;
                const searchInput = $('#searchInput');
                const searchType = $('#searchType');
                const searchForm = $('#searchForm');
                const ordersTableBody = $('#ordersTableBody');

                // Autocomplete functionality
                searchInput.autocomplete({
                    source: function (request, response) {
                        clearTimeout(searchTimeout);
                        searchTimeout = setTimeout(() => {
                            $.get('/orders/search-suggestions', {
                                query: request.term,
                                type: searchType.val()
                            }, function (data) {
                                if (data.success) {
                                    response(data.suggestions);
                                }
                            });
                        }, 300);
                    },
                    minLength: 2,
                    select: function (event, ui) {
                        searchInput.val(ui.item.value);
                        searchForm.submit();
                        return false;
                    }
                });

                // Handle form submission
                searchForm.on('submit', function (e) {
                    e.preventDefault();
                    const query = searchInput.val();
                    const type = searchType.val();

                    $.get('/orders/search', { query, type }, function (data) {
                        if (data.success) {
                            ordersTableBody.empty();
                            if (data.orders.length > 0) {
                                data.orders.forEach(order => {
                                    const row = `
                                    <tr>
                                        <td>${order.siNumber}</td>
                                        <td>${new Date(order.orderDate).toLocaleDateString()}</td>
                                        <td>${order.customerName}</td>
                                        <td>₱${parseFloat(order.totalAmount).toLocaleString()}</td>
                                        <td>
                                            <span class="badge bg-${getStatusColor(order.status.name)}">
                                                ${order.status.name}
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/orders/${order.id}" class="btn btn-sm btn-info">View</a>
                                                <a href="/orders/${order.id}/edit" class="btn btn-sm btn-warning">Edit</a>
                                                <form action="/orders/${order.id}/delete" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this order?')">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                `;
                                    ordersTableBody.append(row);
                                });
                            } else {
                                ordersTableBody.html('<tr><td colspan="6" class="text-center">No orders found</td></tr>');
                            }
                        }
                    });
                });

                // Handle search type change
                searchType.on('change', function () {
                    searchInput.val('');
                    searchInput.attr('placeholder', `Search by ${$(this).find('option:selected').text().toLowerCase()}...`);
                });
            });
        </script>